{
  "manifest_version": 3,
  "name": "MathPenPro",
  "version": "24.0",
  "description": "Her sekmede otomatik çalışan, kaydırma kilitli modern çizim aracı.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}